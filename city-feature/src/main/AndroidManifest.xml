<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.gdg_siberia.city_feature">

    <application
        android:name=".app.BaseApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="ru.gdg_siberia.city_feature.ui.screen.city.CityActivityView"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarTransparency">

            <intent-filter xmlns:instant="http://schemas.android.com/instantapps"
                android:autoVerify="true"
                instant:order="1"
                tools:targetApi="m">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="www.gdg-ia.ru"
                    android:pathPrefix="/"
                    android:scheme="https" />

                <data android:scheme="http" />
            </intent-filter>

            <meta-data
                android:name="default-url"
                android:value="https://www.gdg-ia.ru/vrn/" />

        </activity>

    </application>
</manifest>
